{% liquid 
    if section.settings.menu.links == blank
        assign main_menu_linklist = linklists[section.settings.menu].links
    else
        assign main_menu_linklist = section.settings.menu.links
    endif
%}

<!-- Offcanvas Menu Begin -->
<div class="offcanvas-menu-overlay"></div>
<div class="offcanvas-menu-wrapper">
  <div class="offcanvas__close">+</div>
  <ul class="offcanvas__widget">
    <li>
      <span class="icon_search search-switch"></span>
    </li>
    <li>
      <a href="#">
        <span class="icon_heart_alt"></span>
        <div class="tip">2</div>
      </a>
    </li>
    <li>
      <a href="#">
        <span class="icon_bag_alt"></span>
        <div class="tip">2</div>
      </a>
    </li>
  </ul>
  {% if section.settings.logo != blank %}
    <div class="offcanvas__logo">
      <a href="{{ shop.url }}"><img
          src="{{ section.settings.logo | img_url: 'medium' }}"
          alt="{{ shop.name }}"
          width=""
          height=""
          loading="lazy"></a>
    </div>

  {% else %}
    <a href="{{ shop.url }}">
      <h1 class="offcanvas__logo text-xl font-bold truncate uppercase">{{ shop.name }}</h1>
    </a>
  {% endif %}
  <div id="mobile-menu-wrap"></div>
  <div class="offcanvas__auth">
    <a href="#">Login</a>
    <a href="#">Register</a>
  </div>
</div>
<!-- Offcanvas Menu End -->

<!-- Header Section Begin -->
<header class="header">
  <div class="container-fluid">
    <div class="row">
      <div class="col-xl-3 col-lg-2">
        {% if section.settings.logo != blank %}
          <div class="header__logo">
            <a href="{{ shop.url }}"><img
                src="{{ section.settings.logo | img_url: 'medium' }}"
                alt="{{ shop.name }}"
                width=""
                height=""
                loading="lazy"></a>
          </div>

        {% else %}
          <a href="{{ shop.url }}">
            <h1 class="header__logo text-xl font-bold truncate uppercase">{{ shop.name }}</h1>
          </a>
        {% endif %}
      </div>
      <div class="col-xl-6 col-lg-7">
        <nav class="header__menu">
          <ul>
            <li class="active">
              <a href="./index.html">Home</a>
            </li>
            <li>
              <a href="#">Women’s</a>
            </li>
            <li>
              <a href="#">Men’s</a>
            </li>
            <li>
              <a href="./shop.html">Shop</a>
            </li>
            <li>
              <a href="#">Pages</a>
              <ul class="dropdown">
                <li>
                  <a href="./product-details.html">Product Details</a>
                </li>
                <li>
                  <a href="./shop-cart.html">Shop Cart</a>
                </li>
                <li>
                  <a href="./checkout.html">Checkout</a>
                </li>
                <li>
                  <a href="./blog-details.html">Blog Details</a>
                </li>
              </ul>
            </li>
            <li>
              <a href="./blog.html">Blog</a>
            </li>
            <li>
              <a href="./contact.html">Contact</a>
            </li>
          </ul>
        </nav>
      </div>
      <div class="col-lg-3">
        <div class="header__right">
          <div class="header__right__auth">
            <a href="#">Login</a>
            <a href="#">Register</a>
          </div>
          <ul class="header__right__widget">
            <li>
              <span class="icon_search search-switch"></span>
            </li>
            <li>
              <a href="#">
                <span class="icon_heart_alt"></span>
                <div class="tip">2</div>
              </a>
            </li>
            <li>
              <a href="#">
                <span class="icon_bag_alt"></span>
                <div class="tip">2</div>
              </a>
            </li>
          </ul>
        </div>
      </div>
    </div>
    <div class="canvas__open">
      <i class="fa fa-bars"></i>
    </div>
  </div>
</header>
<!-- Header Section End -->

<!-- Header Section Begin -->

<header class="d-none d-md-block header">
  <div class="header__top">
    <div class="container">
      <div class="row">
        <div class="col-lg-6 col-md-7">
          <div class="header__top__left">
            <p>{{ section.settings.announcement }}</p>
          </div>
        </div>
        <div class="col-lg-6 col-md-5">
          <div class="header__top__right">
            <div class="header__top__links">
              {% if shop.customer_accounts_enabled %}
                {% if customer %}
                  <a href="{{ routes.account_url }}">Account</a>
                  {{ 'Log out' | customer_logout_link }}
                {% else %}
                  {{ 'Log in ' | customer_login_link }}
                  {{ 'Register' | customer_register_link }}
                {% endif %}
              {% endif %}
            </div>
            <div class="header__top__hover">
              <span>Usd
                <i class="arrow_carrot-down"></i>
              </span>
              <ul>
                <li>USD</li>
                <li>EUR</li>
                <li>USD</li>
              </ul>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="container">
    <div class="row">
      <div class="col-lg-3 col-md-3">
        {% if section.settings.logo != blank %}
          <div class="header__logo">
            <a href="{{ shop.url }}"><img
                src="{{ section.settings.logo | img_url: 'medium' }}"
                alt="{{ shop.name }}"
                width=""
                height=""
                loading="lazy"></a>
          </div>

        {% else %}
          <a href="{{ shop.url }}">
            <h1 class="header__logo text-xl font-bold truncate uppercase">{{ shop.name }}</h1>
          </a>
        {% endif %}
      </div>
      <div class="col-lg-6 col-md-6">
        <nav class="header__menu mobile-menu">
          <ul>
            {% for link in main_menu_linklist %}
              {% if link.links != blank %}

                <li>
                  <a href="#">{{ link.title }}</a>

                  <ul class="dropdown">
                    {% for childlink in link.links %}
                      <li>
                        <a href="{{ childlink.url }}" class="hover:bg-gray-300 hover:text-gray-900">{{ childlink.title }}</a>
                      </li>
                    {% endfor %}
                  </ul>
                </li>

              {% else %}

                <li class="aactive">
                  <a href="{{ link.url }}">{{ link.title }}</a>
                </li>

              {% endif %}
            {% endfor %}
          </ul>
        </nav>
      </div>
      <div class="col-lg-3 col-md-3">
        <div class="header__nav__option">
          <a href="#" class="search-switch">{{ 'search.png' | asset_img_url | img_tag }}</a>
          <a href="#">{{ 'heart.png' | asset_img_url | img_tag }}</a>
          <a href="#">{{ 'cart.png' | asset_img_url | img_tag }}<span>0</span>
          </a>
          <div class="price">$0.00</div>
        </div>
      </div>
    </div>
    <div class="canvas__open">
      <i class="fa fa-bars"></i>
    </div>
  </div>
</header>


{% schema %}
  {
    "name": "Header",
    "settings": [
      {
        "type": "text",
        "id": "mobile_menu_title",
        "default": "Menu",
        "label": "Mobile Menu Title"
      }, {
        "type": "link_list",
        "id": "menu",
        "default": "main-menu",
        "label": "Heading Navigation Menu"
      }
    ]
  }
{% endschema %}