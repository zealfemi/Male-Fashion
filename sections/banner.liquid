        "name": "First Banner",
        "limit": 1,
        "settings": [
          {
            "type": "image_picker",
            "id": "banner_pic",
            "label": "Select Banner Image"
          }, {
            "type": "text",
            "id": "title",
            "label": "Title",
            "default": "Title"
          }, {
            "type": "url",
            "id": "button_url",
