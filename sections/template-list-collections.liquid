<div class="product spad">

  <!-- Breadcrumb Begin -->
  <div class="breadcrumb-option">
    <div class="container">
      <div class="row">
        <div class="col-lg-12">
          <div class="breadcrumb__links">
            <a href="{{ shop.url }}">
              <i class="fa fa-home"></i>
              Home</a>
            <span>{{ blog.title }}</span>
          </div>
        </div>
      </div>
    </div>
  </div>
  <!-- Breadcrumb End -->

  <div class="container">
    <div class="section-title">
      <h4>{{ section.settings.title }}</h4>
    </div>

    <div class="max-w-6xl mx-auto my-3">
      <div class="grid grid-cols-1 md:grid-cols-3 gap-4 py-6">

        {% for collection in collections %}
          {% if collection.all_products_count > 0 %}
            <div class="w-full">
              <div class="border bg-white overflow-hidden">
                <a href="{{ collection.url }}">
                  <div class="h-80 overflow-hidden">
                    {% if collection.featured_image != blank %}
                      <img
                        src="{{ collection.featured_image | img_url: 'medium' }}"
                        alt="{{ collection.title | escape }}"
                        width=""
                        height=""
                        class="w-full h-full object-cover transition duration-1000 ease-in-out transform hover:scale-105"
                        loading="lazy" />

                    {% else %}
                      <img
                        src="{{ collection.products.first.image | img_url: 'medium' }}"
                        alt="{{ collection.title | escape }}"
                        width=""
                        height=""
                        class="w-full h-full object-cover transition duration-1000 ease-in-out transform hover:scale-105"
                        loading="lazy" />
                    {% endif %}
                  </div>
                </a>

                <div class="p-4 bg-gray-100">
                  <h1 class="text-xl">{{ collection.title }}</h1>
                </div>
              </div>
            </div>
          {% endif %}
        {% endfor %}
      </div>
    </div>
  </div>
</div>


{% schema %}
  {
    "name": "Template List Collections",
    "settings": [
      {
        "type": "text",
        "id": "title",
        "label": "Title",
        "default": "Collections"
      }
    ]
  }
{% endschema %}