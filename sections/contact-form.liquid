<div class="flex flex-col items-center my-5">
  {% if section.settings.title != blank %}
    <h1 class="text-3xl font-medium my-5 md:my-8">{{ section.settings.title }}</h1>
  {% endif %}

  {% form 'contact' %}

    {% render 'form-errors', form: form %}

    <div class="max-w-6xl mx-auto justify-center flex-1 items-center">
      <div class="flex mb-3">

        <div class="px-1 md:w-1/2">
          <label for="contact_name" class="uppercase text-xs text-gray-500 font-medium">Name</label>
          <input
            type="text"
            name="contact[name]"
            id="contact_name"
            class="border py-3 px-4 mb-3 text-gray-700 w-full">
        </div>

        <div class="px-1 md:w-1/2">
          <label for="contact_email" class="uppercase text-xs text-gray-500 font-medium">Email address</label>
          <input
            type="email"
            name="contact[email]"
            id="contact_email"
            class="border py-3 px-4 mb-3 text-gray-700 w-full">
        </div>
      </div>

      <div class="flex mb-3">
        <div class="w-full px-1">

          <label for="contact_message" class="uppercase text-xs text-gray-500 font-medium">Message</label>
          <textarea
            name="contact[body]"
            id="contact_message"
            class="border py-3 px-4 mb-3 text-gray-700 w-full"></textarea>

        </div>
      </div>

      <input
        type="submit"
        class="w-full cursor-pointer px-4 py-2 border text-base font-medium bg-gray-900 text-white hover:bg-gray-700"
        value="Submit Message">
    </div>

  {% endform %}
</div>

{% schema %}
  {
    "name": "Contact Form",
    "settings": [
      {
        "type": "text",
        "id": "title",
        "label": "Title"
      }
    ],
    "presets": [
      {
        "name": "Contact Form"
      }
    ]
  }
{% endschema %}