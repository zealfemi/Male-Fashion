{% paginate blog.articles by section.settings.number_of_blog_posts %}

  <!-- Breadcrumb Begin -->
  <div class="breadcrumb-option">
    <div
      class="container">
      <div class="row">
        <div class="col-lg-12">
          <div class="breadcrumb__links">
            <a href="{{ shop.url }}">
              <i class="fa fa-home"></i>
              Home</a>
            <span>{{ blog.title }}</span>
          </div>
        </div>
      </div>
    </div>
  </div>
  <!-- Breadcrumb End -->

  <!-- Blog Section Begin -->
  <section class="blog spad">
    <div class="container">
      <div class="section-title">
        <h4>{{ blog.title }}</h4>
      </div>

      <div class="row">
        {% for article in blog.articles %}
          <div class="col-lg-4 col-md-4 col-sm-6">
            <div class="blog__item shadow-xxl">
              <div class="blog__item__pic set-bg" {% if article.image != blank %}data-setbg="{{ article.image | img_url: 'master' }}"{% endif %}>
                {% if article.image == blank %}
                  <center>
                    {{ 'image' | placeholder_svg_tag: 'blog__item__pic' }}
                  </center>
                {% endif %}
              </div>
              <div class="blog__item__text pl-4">
                <h6>
                  <a href="{{ article.url }}">{{ article.title | truncatewords: 15 }}</a>
                </h6>
                <ul>
                  <li>by
                    <span>{{ article.author }}</span>
                  </li>
                  <li>{{ article.created_at | date: '%B, %Y' }}</li>
                </ul>
              </div>
            </div>
          </div>
        {% endfor %}
        <div class="col-lg-12 text-center">
          {% render 'pagination', pagination: paginate %}
        </div>
      </div>
    </div>
  </section>
  <!-- Blog Section End -->

{% endpaginate %}



{% schema %}
  {
    "name": "Blog Posts",
    "settings": [
      {
        "type": "range",
        "id": "number_of_blog_posts",
        "min": 3,
        "max": 15,
        "step": 1,
        "default": 3,
        "label": "Blog posts per page"
      }
    ]
  }
{% endschema %}