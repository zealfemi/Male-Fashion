{% paginate blog.articles by section.settings.number_of_blog_posts %}

  <!-- Breadcrumb Begin -->
  <div class="breadcrumb-option">
    <div
      class="container">
      <div class="row">
        <div class="col-lg-12">
          <div class="breadcrumb__links">
            <a href="{{ shop.url }}">
              <i class="fa fa-home"></i>
              Home</a>
            <span>{{ blog.title }}</span>
          </div>
        </div>
      </div>
    </div>
  </div>
  <!-- Breadcrumb End -->

  <div class="product spad">
    <div class="section-title">
      <h4>{{ blog.title }}</h4>
    </div>
    <div class="max-w-6xl mx-auto">
      <div class="grid grid-cols-1 md:grid-cols-3 gap-4">

        {% for article in blog.articles %}

          <div class="w-full py-6 px-3">
            <div class="bg-white shadow-xl rounded-lg overflow-hidden">

              {% if article.image != blank %}
                <a href="{{ article.url }}">
                  <img
                    class="w-full h-80 object-cover"
                    src="{{ article.image | img_url: 'medium' }}"
                    alt="{{ article.image.alt }}"
                    width="{{ article.image.width }}"
                    height="{{ article.image.height }}"
                    loading="lazy" />
                </a>
              {% else %}
                <a href="{{ article.url }}">
                  {{ 'image' | placeholder_svg_tag: 'w-full h-80 object-cover' }}
                </a>
              {% endif %}

              <div class="p-4">
                <h1 class="text-xl font-medium my-4">{{ article.title }}</h1>
                {% if article.excerpt.size > 0 %}
                  <p>{{ article.excerpt | strip_html | truncatewords: 15 }}</p>
                {% else %}
                  <p>{{ article.content | strip_html | truncatewords: 15 }}</p>
                {% endif %}

                <a href="{{ article.url }}" class="font-medium text-blue-600 hover:text-blue-800 my-4 block">{{ section.settings.blog_read_more }}</a>
              </div>

            </div>
          </div>

        {% endfor %}

      </div>
    </div>

    <div class="max-w-6xl mx-auto">
      {% render 'pagination', pagination: paginate %}
    </div>
  </div>
{% endpaginate %}



{% schema %}
  {
    "name": "Blog Posts",
    "settings": [
      {
        "type": "range",
        "id": "number_of_blog_posts",
        "min": 3,
        "max": 15,
        "step": 1,
        "default": 3,
        "label": "Blog posts per page"
      }, {
        "type": "text",
        "id": "blog_read_more",
        "label": "Read more label",
        "default": "Read more"
      }
    ]
  }
{% endschema %}