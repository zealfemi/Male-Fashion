<div class="items-center px-4">

  <h1 class="text-3xl text-center uppercase">{{ section.settings.featured_collection_title }}</h1>

  <div class="max-w-6xl mx-auto my-3">
    <div class="grid grid-cols-1 md:grid-cols-4 gap-3 py-6">

      {% for product in section.settings.featured_collection.products limit: section.settings.number_of_products %}
        {% render 'product-card', products_card: product %}
      {% else %}
        {% for item in (1..4) %}
          {% render 'product-card-placeholder' %}
        {% endfor %}
      {% endfor %}
    </div>
  </div>
</div>

{% schema %}
  {
    "name": "Featured Collection",
    "settings": [
      {
        "type": "text",
        "id": "featured_collection_title",
        "label": "Title",
        "default": "Featured Collection"
      }, {
        "type": "collection",
        "id": "featured_collection",
        "label": "Select Featured Collection"
      }, {
        "type": "range",
        "id": "number_of_products",
        "default": 4,
        "min": 4,
        "max": 12,
        "step": 4,
        "label": "Number of Products"
      }
    ],
    "presets": [
      {
        "name": "Featured Collection"
      }
    ]
  }
{% endschema %}