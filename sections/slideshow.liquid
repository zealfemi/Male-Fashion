{% schema %}
  {
    "name": "SlideShow",
    "blocks": [
      {
        "name": "Slide",
        "type": "image",
        "settings": [
          {
            "type": "image_picker",
            "id": "slide_image",
            "label": "Slide Image"
          },
          {
            "type": "collection",
            "id": "collection",
            "label": "Collection"
          },
          {
            "type": "text",
            "id": "title",
            "label": "Title",
            "default": "Title"
          },
          {
            "type": "text",
            "id": "description",
            "label": "Description",
            "default": "Description"
          }, {
            "type": "url",
            "id": "btn_url",
            "label": "Button URL"
          }, {
            "type": "text",
            "id": "btn_text",
            "label": "Button Text"
          }, {
            "type": "url",
            "id": "facebook_url",
            "label": "Facebook URL"
          }, {
            "type": "url",
            "id": "twitter_url",
            "label": "Twitter URL"
          }, {
            "type": "url",
            "id": "instagram_url",
            "label": "Instagram URL"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Slideshow"
      }
    ]
  }
{% endschema %}