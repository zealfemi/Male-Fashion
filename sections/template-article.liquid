<!-- Breadcrumb Begin -->
<div class="breadcrumb-option">
  <div class="container">
    <div class="row">
      <div class="col-lg-12">
        <div class="breadcrumb__links">
          <a href="{{ shop.url }}">
            <i class="fa fa-home"></i>
            Home</a>
          <a href="{{ blog.url }}">{{ blog.title }}</a>
          <span>{{ article.title }}</span>
        </div>
      </div>
    </div>
  </div>
</div>
<!-- Breadcrumb End -->

<article
  class="py-8"
  itemscope
  itemtype="http://schema.org/BlogPosting">
  {% for block in section.blocks %}
    {% case block.type %}
      {% when 'article_title' %}
      <div class="flex items-center justify-center">
        <div class="max-w-7xl text-center">
          <a href="{{ blog.url }}" class="text-base uppercase text-gray-500 hover:text-gray-900">{{ blog.title }}</a>
          <h1 class="text-4xl md:text-6xl font-medium" itemprop="headline">{{ article.title }}</h1>
        </div>
      </div>

      {% when 'article_author' %}
      <div
        class="flex items-center justify-center"
        itemscope
        itemtype="http://schema.org/Person">
        <div class="max-w-7xl text-center">
          {% if section.settings.show_article_aurthor %}
            <small itemprop="author">{{ article.author }}</small>
          {% endif %}
        </div>
      </div>

      {% when 'article_date' %}
      <div class="flex items-center justify-center">
        <div class="max-w-7xl text-center">
          {% if section.settings.show_article_date %}
            <time datetime="{{ article.created_at | date: '%Y-%m-%d' }}" itemprop="dateCreated datePublished">{{ article.created_at | date: format: 'on_date' }}</time>
          {% endif %}
        </div>
      </div>

      {% when 'article_image' %}
      <div class="max-w-7xl bg-blue-100 rounded-lg mx-2 md:mx-auto overflow-hidden my-4" itemprop="image">
        {% if article.image != blank %}
          <img
            class="w-full h-80 md:h-96 object-cover object-center"
            src="{{ article.image | img_url: 'large' }}"
            alt="{{ article.image.alt }}"
            width="{{ article.image.width }}"
            height="{{ article.image.height }}"
            loading="lazy" />
        {% else %}
          {% assign placeholder_image = 'lifestyle-2' %}
          {{ placeholder_image | placeholder_svg_tag: 'w-full h-80 md:h-96 object-cover object-center p-5' }}
        {% endif %}
      </div>

      {% when 'article_content' %}
      <div class="flex items-center justify-center">
        <div class="max-w-4xl px-4" itemprop="articleBody">
          {{ article.content }}
        </div>
      </div>
  {% else %}

    {% endcase %}
  {% endfor %}



</article>

<!-- Blog Details Section Begin -->
<article class="blog-details spad">
  <div class="container">
    <div class="row">
      <div class="col-lg-8 col-md-8">
        <div class="blog__details__content">
          <div class="blog__details__item">
            <img
              src="{{ article.image | img_url: 'master' }}"
              alt="{{ article.image.alt }}"
              width=""
              height="" />
            <div class="blog__details__item__title">
              <span class="tip">{{ blog.title }}</span>
              <h4>
                {{ article.title }}
              </h4>
              <ul>
                <li>by
                  <span>{{ article.author }}</span>
                </li>
                <li>{{ article.published_at | date: '%B, %Y' }}</li>
                <li>{{ article.comments_count }} Comment{% if article.comments_count > 1 %}s{% endif %}
                </li>
              </ul>
            </div>
          </div>
          <div class="blog__details__desc">
            {{ article.content }}
          </div>
          <div class="blog__details__tags">
            {% for tag in article.tags %}
              <a href="{{ tag.url }}">{{ tag.title }}</a>
            {% endfor %}
          </div>
          <div class="blog__details__btns">
            <div class="row">
              <div class="col-lg-6 col-md-6 col-sm-6">
                <div class="blog__details__btn__item">
                  <h6>
                    <a href="{{ blog.previous_article.url }}">
                      <i class="fa fa-angle-left"></i>
                      Previous article</a>
                  </h6>
                </div>
              </div>
              <div class="col-lg-6 col-md-6 col-sm-6">
                <div class="blog__details__btn__item blog__details__btn__item--next">
                  <h6>
                    <a href="{{ blog.next_article.url }}">Next article
                      <i class="fa fa-angle-right"></i>
                    </a>
                  </h6>
                </div>
              </div>
            </div>
          </div>

          {% if blog.comments_enabled %}
            <div class="blog__details__comment">
              <h5>{{ article.comments_count }} Comment{% if article.comments_count > 1 %}s{% endif %}
              </h5>
              <a href="#" class="leave-btn">Leave a comment</a>

              {% paginate article.comments by 2 %}
                {% for commentt in article.comments %}
                  <div class="blog__comment__item">
                    <div class="blog__comment__item__text">
                      <h6>{{ commentt.author }}</h6>
                      <p>
                        {{ commentt.content }}
                      </p>
                      <ul>
                        <li>
                          <i class="fa fa-clock-o"></i>
                          {{ commentt.created_at | date: '%B, %Y' }}</li>
                      </ul>
                    </div>
                  </div>

                  {% for reply in commentt.replies %}
                    <div class="blog__comment__item blog__comment__item--reply">
                      <div class="blog__comment__item__text">
                        <h6>{{ reply.author }}</h6>
                        <p>
                          {{ reply.content }}
                        </p>
                        <ul>
                          <li>
                            <i class="fa fa-clock-o"></i>
                            {{ reply.created_at | date: '%B, %Y' }}</li>
                        </ul>
                      </div>
                    </div>
                  {% endfor %}

                {% endfor %}
              {% endpaginate %}
            </div>
          {% endif %}
        </div>
      </div>
      <div class="col-lg-4 col-md-4">
        <div class="blog__sidebar">
          <div class="blog__sidebar__item">
            <div class="section-title">
              <h4>Recent Articles</h4>
            </div>
            {% for article in blog.articles limit: 3 %}
              <a href="#" class="blog__feature__item">
                <div class="blog__feature__item__pic">
                  {% if article.image != blank %}
                    <img
                      src="{{ article.image | img_url: 'small' }}"
                      alt="{{ article.image.alt }}"
                      width=""
                      height="" />
                  {% endif %}
                </div>
                <div class="blog__feature__item__text">
                  <h6>{{ article.title }}</h6>
                  <span>{{ article.published_at | date: '%B, %Y' }}</span>
                </div>
              </a>
            {% endfor %}
          </div>
          <div class="blog__sidebar__item">
            <div class="section-title">
              <h4>Tags</h4>
            </div>
            <div class="blog__sidebar__tags">
              {% for tag in article.tags %}
                <a href="{{ tag.url }}">{{ tag.title }}</a>
              {% endfor %}
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</article>
<!-- Blog Details Section End -->

<script type="application/ld+json">
  {
  "@context": "http://schema.org",
    "@type": "BlogPosting",
    "headline": {{ article.title | json }},
  "datePublished": {{ article.published_at | date: format: 'default' | json }},
  "dateCreated": {{ article.created_at | date: format: 'default' | json }},
  "author": {
      "@type": "Person",
      "name": {{ article.author | json }}
  },
  {% if article.image %}
    "image": [
    {{ article.image | img_url: 'medium' | prepend: 'https:' | json }}
    ],
  {% endif %}
  {% if article.excerpt != blank %}
    "excerpt": {{ article.excerpt | strip_html | json }},
  {% endif %}
  "articleBody": {{ article.content | strip_html | json }}
  }
</script>

{% schema %}
  {
    "name": "Article Page",
    "settings": [
      {
        "type": "checkbox",
        "id": "show_article_aurthor",
        "label": "Show Article Author",
        "default": true
      }, {
        "type": "checkbox",
        "id": "show_article_date",
        "label": "Show Article Date",
        "default": true
      }
    ],
    "blocks": [
      {
        "type": "article_title",
        "name": "Article Title",
        "limit": 1
      },
      {
        "type": "article_author",
        "name": "Article Author",
        "limit": 1
      },
      {
        "type": "article_date",
        "name": "Article Date",
        "limit": 1
      },
      {
        "type": "article_image",
        "name": "Article Image",
        "limit": 1
      }, {
        "type": "article_content",
        "name": "Article Content",
        "limit": 1
      }
    ]
  }
{% endschema %}