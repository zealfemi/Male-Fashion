{% case media.media_type %}
  {% when 'image' %}
  <img
    src="{{ media | img_url: 'large' }}"
    alt="{{ media.preview_image.alt }}"
    class="w-full h-full object-contain"
    loading="lazy"
    width=""
    height="">

  {% when 'external_video' %}
  {{ media | external_video_tag: class: 'w-full h-80 object-contain' }}

  {% when 'video' %}
  {{ media | video_tag: controls: true, class: 'w-full h-80 object-contain' }}

  {% when 'model' %}
  {{ media | model_viewer_tag: class: 'w-full h-80 object-contain' }}

{% else %}
  {{ media | media_tag: class: 'w-full h-80 object-contain' }}

{% endcase %}