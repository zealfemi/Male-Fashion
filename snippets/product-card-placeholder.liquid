<div class="w-full px-3 py-6">
  <div class="border bg-white shadow-lg rounded-lg overflow-hidden">

    {{ 'product-1' | placeholder_svg_tag: 'w-full h-full object-cover bg-gray-100 transition duration-1000 ease-in-out hover:scale-105 transform' }}

    <div class="flex flex-col p-4">

      <span class="text-sm text-gray-400">Vendor</span>

      <span class="text-gray-700 uppercase font-medium">Placeholder Title</span>

      <span class="text-gray-500">{{ 1000 | money }}</span>
    </div>
  </div>
</div>


<div class="col-lg-3 col-md-4 col-sm-6 mix {{ products_card.collections.last.id }}">
  <div class="product__item">
    <div
      class="product__item__pic set-bg"
      data-setbg='
      {% if products_card.featured_image %}
        {{ products_card.featured_image | img_url: 'master' }}
      {% else %}
        {{ 'product-1' | placeholder_svg_tag }}
      {% endif %}'>
      <ul class="product__hover">
        <li>
          <a href="{{ 'product-1' | placeholder_svg_tag }}" class="image-popup">
            <span class="icon_expand"></span>
          </a>
        </li>
        <li>
          <a href="#">
            <span class="icon_heart_alt"></span>
          </a>
        </li>
        <li>
          <a href="#">
            <span class="icon_bag_alt"></span>
          </a>
        </li>
      </ul>
    </div>
    <div class="product__item__text">
      <h6>Product Title
      </h6>
      <div class="rating">
        <i class="fa fa-star"></i>
        <i class="fa fa-star"></i>
        <i class="fa fa-star"></i>
        <i class="fa fa-star"></i>
        <i class="fa fa-star"></i>
      </div>
      <div class="product__price">{{ 1000 | money }}</div>
    </div>
  </div>
</div>