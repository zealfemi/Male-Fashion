{% if pagination.pages > 1 %}

  <nav role="navigation" class="flex justify-center items-center my-8">
    {% if pagination.previous %}
      <a href="{{ pagination.previous.url }}" class="primary-btn mr-8 hover:bg-red-300">Previous</a>
    {% endif %}

    {% if pagination.next %}
      <a href="{{ pagination.next.url }}" class="primary-btn ml-8 hover:bg-red-300">Next</a>
    {% endif %}
  </nav>

{% endif %}